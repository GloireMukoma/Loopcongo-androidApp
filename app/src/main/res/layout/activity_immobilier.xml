<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- TopBar personnalisÃ©e -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/BleuFoncePrimaryColor">

        <!-- Top Bar with back arrow and 2 icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/cityImmobiliers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="immo a l'shi"
                android:textColor="#D0D0D0"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:background="#2b3144" />

        <!-- Ligne principale : Image + Champ de recherche + Notification -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Image de profil -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatarImgUserConnected"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:padding="2dp"
                app:shapeAppearanceOverlay="@style/CircularImageStyle"
                android:src="@drawable/user_profile" />

            <!-- Champ de recherche -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#cccccc" />

                <EditText
                    android:id="@+id/searchImmobilierEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Filtrer par quartier..."
                    android:textColor="#ffffff"
                    android:textColorHint="#aaaaaa"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Bouton de notification
            <ImageView
                android:id="@+id/subscriptionIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="3dp"
                app:tint="@color/moveColor"
                android:src="@drawable/ic_star"
                android:contentDescription="Notifications" /> -->
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/immobiliersListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/low_white"
        android:layout_marginHorizontal="7dp"
        android:dividerHeight="1dp"/>


    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBarImmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>
