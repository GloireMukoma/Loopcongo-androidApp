<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    android:background="@color/white">

    <!-- CardView de l'image -->
    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imgImmobilierItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />
    </androidx.cardview.widget.CardView>

    <!-- Infos de l'article -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/titreImmobilierItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adresse"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/descriptionImmobilierItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="13dp"
            android:text="description"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/prixImmobilierItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="prix"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/statusImmobilierItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="12dp"
            android:text="status"
            android:textColor="@color/black" />

        <!-- Auteur -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Image de profil -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/topArticleUserAvatar"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="3dp"
                android:scaleType="centerCrop"
                android:padding="2dp"
                app:shapeAppearanceOverlay="@style/CircularImageStyle"
                app:strokeColor="@android:color/holo_orange_light"
                app:strokeWidth="1dp"
                android:src="@drawable/user_profile" />

            <TextView
                android:id="@+id/usernameItemImmobilier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="auteur"
                android:textSize="13sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Tu peux ajouter d'autres infos comme localisation ici -->

    </LinearLayout>

</LinearLayout>
