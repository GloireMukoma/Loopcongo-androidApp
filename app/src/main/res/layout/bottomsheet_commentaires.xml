<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BleuFonce2PrimaryColor"
    android:padding="12dp">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMMENTAIRES"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginBottom="10dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="#2b3144" />

    <!-- Liste des commentaires -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCommentaires"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Zone de saisie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <EditText
            android:id="@+id/edtCommentaire"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Ã‰crire un commentaire..."
            android:background="@drawable/bg_commentaires_edit_text"
            android:textColor="@color/white"
            android:padding="13dp"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/btnEnvoyer"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_send_msg"
            android:background="@android:color/transparent"
            app:tint="@android:color/holo_blue_dark"/>
    </LinearLayout>

</LinearLayout>
