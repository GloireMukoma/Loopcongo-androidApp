<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BleuFoncePrimaryColor"
    android:fillViewport="true"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Petit header (icône + titre + sous-texte) -->
        <ImageView
            android:id="@+id/imgBoostIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_subscription"
            app:tint="@color/secondaryColor"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abonnements mensuels"
            android:textColor="@color/text_sub"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvMainSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisis un plan pour augmenter ta visibilité et bénéficier de boosts gratuits chaque mois."
            android:textColor="@color/text_sub"
            android:textSize="13sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <!-- Container des cartes -->
        <LinearLayout
            android:id="@+id/cardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <!-- Card : Basic -->
            <LinearLayout
                android:id="@+id/cardBasic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvBasicTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvBasicPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 000 CDF / mois"
                    android:textColor="@color/accent_yellow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvBasicDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publier jusqu’à 10 articles · 1 boost gratuit/mois"
                    android:textColor="@color/text_sub"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnBasic"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="S'abonner"
                    android:textAllCaps="false"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/accent_yellow"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <!-- Card : Pro -->
            <LinearLayout
                android:id="@+id/cardPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvProTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pro"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvProPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 000 CDF / mois"
                    android:textColor="@color/accent_yellow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvProDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publier jusqu’à 20 articles · 3 boosts gratuits/mois · Badge 'Vendeur Certifié'"
                    android:textColor="@color/text_sub"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnPro"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="S'abonner"
                    android:textAllCaps="false"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <!-- Card : Premium -->
            <LinearLayout
                android:id="@+id/cardPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/tvPremiumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPremiumPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 000 CDF / mois"
                    android:textColor="@color/accent_yellow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvPremiumDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Articles illimités · Boost profil automatique · Statistiques avancées · Badge 'Top Vendeur'"
                    android:textColor="@color/text_sub"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnPremium"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="S'abonner"
                    android:textAllCaps="false"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/accent_yellow"
                    android:textColor="@color/bg_dark"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Petit texte informatif -->
        <TextView
            android:id="@+id/tvNoteBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Essai gratuit 7 jours pour les nouveaux abonnés. Renouvellement automatique — annuler à tout moment."
            android:textColor="@color/text_sub"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
