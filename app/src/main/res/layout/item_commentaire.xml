<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:elevation="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginHorizontal="3dp"
    android:clipToOutline="true">

    <!-- Ligne principale : avatar + contenu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/avatarUserItemCommentaire"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user1"
                android:scaleType="centerCrop"
                android:contentDescription="avatar" />
        </androidx.cardview.widget.CardView>

        <!-- Bloc texte -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_commentaires_item"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="13sp"
                android:layout_marginTop="-2dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"/>

            <!-- Message -->
            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="message"
                android:textSize="13sp"
                android:textColor="@color/low_white"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Détails : like count et temps -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!-- android:textColor="#555555" -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        app:tint="@android:color/holo_blue_dark"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•Il y a 4min"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


