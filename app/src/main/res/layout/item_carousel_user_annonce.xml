<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/carouselAnnonceImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lubumbashi" />

    <!-- Overlay sombre android:background="#80000000" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Texte en haut avec fond sombre léger -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#66000000"
            android:padding="8dp">

            <TextView
                android:id="@+id/carousselAnnonceTitre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offres de Fin d'Année"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carousselAnnonceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bénéficiez de 15 % de réduction sur les séjours"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Bouton en bas à gauche -->
        <Button
            android:id="@+id/btnVoirOffres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voir les offres"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
