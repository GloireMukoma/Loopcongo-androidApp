<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/BleuClairPrimaryColor"> <!-- Choisis la couleur que tu veux -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Section auteur -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="-7dp">

                    <!-- Image de profil -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/avatarAuteurdetailArticle"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/CircularImageStyle"
                        app:strokeColor="@android:color/holo_orange_light"
                        app:strokeWidth="1dp"
                        android:src="@drawable/user_profile" />

                    <TextView
                        android:id="@+id/nomAuteurdetailImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom de l’auteur"
                        android:layout_marginTop="-5dp"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btnVoirProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border"
                        android:text="Profil"
                        android:textAllCaps="false"
                        android:textColor="@color/primeColor3"
                        android:textSize="13sp"
                        android:backgroundTint="@color/BleuFoncePrimaryColor" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Image principale -->
        <ImageView
            android:id="@+id/imagePrincipaldetailArticle"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/loading"
            android:background="@drawable/rounded_image_background" />

        <!-- Conteneur dynamique pour les images de détail -->
        <LinearLayout
            android:id="@+id/containerImagesDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:dividerPadding="6dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/BleuClairPrimaryColor"> <!-- Choisis la couleur que tu veux -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/detailArticleDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom de l’auteur"
                    android:textSize="14sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/prixDetailArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="18"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/primeColor3" />

                <!-- Section auteur -->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bouton bleu principal avec icône WhatsApp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnChoisirChambres"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Discuter sur WhatsApp"
                android:textAllCaps="false"
                android:textColor="@color/secondaryColor"
                android:backgroundTint="@color/BleuClairPrimaryColor"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_message"
                app:drawableTint="@color/primeColor3"
                android:drawablePadding="8dp" />
            <!-- Espace entre l'icône et le texte -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>
