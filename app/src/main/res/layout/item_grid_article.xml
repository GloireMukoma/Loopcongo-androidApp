<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="155dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"> <!-- dÃ©sactivation des marges internes -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Image -->
            <ImageView
                android:id="@+id/gridimageArticle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:contentDescription="Image article" />

            <!-- Texts overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:background="#80000000"
                android:padding="6dp">

                <TextView
                    android:id="@+id/gridtitleArticle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pure Blue Minimalist Shoes"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/gridpriceArticle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$560.00"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
