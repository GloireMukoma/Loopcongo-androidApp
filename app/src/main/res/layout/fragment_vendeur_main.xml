<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TopBar personnalisÃ©e -->
    <include
        layout="@layout/topbar" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/vendeurFragmentabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BleuFoncePrimaryColor"
        app:tabIndicatorColor="#FFD700"
        app:tabSelectedTextColor="#FFD700"
        app:tabIconTint="@color/my_tab_icon_color"
        app:tabTextColor="#CCCCCC"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vendeurFragmentviewPager"
        android:background="@color/BleuFoncePrimaryColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
