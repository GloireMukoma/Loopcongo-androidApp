<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">

    <!-- TopBar personnalisÃ©e -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/BleuFoncePrimaryColor">

        <!-- Ligne principale : Image + Champ de recherche + Notification -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <!-- Image de profil
             app:strokeColor="@android:color/holo_orange_light"
                app:strokeWidth="1dp"-->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatarImgProfileUserConnected"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:padding="2dp"
                app:shapeAppearanceOverlay="@style/CircularImageStyle"
                android:src="@drawable/ic_login" />

            <!-- Champ de recherche -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#cccccc" />

                <EditText
                    android:id="@+id/searchVendeurInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Rechercher un vendeur..."
                    android:textColor="#ffffff"
                    android:textColorHint="#aaaaaa"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Bouton de notification -->
            <ImageView
                android:id="@+id/subscriptionIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                app:tint="#9C27B0"
                android:src="@drawable/ic_star"
                android:contentDescription="Notifications" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/vendeurFragmentabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BleuFoncePrimaryColor"
        app:tabIndicatorColor="#FFD700"
        app:tabSelectedTextColor="#FFD700"
        app:tabIconTint="@color/my_tab_icon_color"
        app:tabTextColor="#CCCCCC"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vendeurFragmentviewPager"
        android:background="@color/BleuFoncePrimaryColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
