<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/filaActuImageArticle"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shoes_men" />

        <LinearLayout
            android:layout_below="@id/filaActuImageArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/fil_actu_degrade_bg"
            android:padding="12dp">

            <TextView
                android:id="@+id/titreArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre de l'article"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_alert" />
                <TextView android:id="@+id/views" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="67" android:textColor="#CCCCCC" android:layout_marginStart="4dp"/>

                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_home" android:layout_marginStart="12dp" />
                <TextView android:id="@+id/likes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6" android:textColor="#CCCCCC" android:layout_marginStart="4dp"/>

                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_encontinu" android:layout_marginStart="12dp" />
                <TextView android:id="@+id/comments" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:textColor="#CCCCCC" android:layout_marginStart="4dp"/>

                <TextView android:id="@+id/filActuDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2j" android:textColor="#CCCCCC" android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
