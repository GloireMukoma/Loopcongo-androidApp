<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image de fond -->
        <ImageView
            android:id="@+id/carouselImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            android:contentDescription="Image" />

        <!-- Conteneur texte en haut à gauche -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_gravity="top|start"
            android:background="#66000000"
            android:elevation="2dp">

            <TextView
                android:id="@+id/titreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#EEEEEE"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Texte "Sponsorisé" en haut à droite -->
        <TextView
            android:id="@+id/sponsorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sponsorisé"
            android:textSize="10sp"
            android:textColor="@color/secondaryColor"
            android:background="@drawable/bg_sponsor"
            android:padding="4dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
