<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#1C1C1C"> <!-- Couleur appliquée ici -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/articleImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/RoundedImageShape" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/articleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre de l'article"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/articlePrix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="18"
                android:textColor="@color/secondaryColor"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/articleAuteur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom user"
                android:textColor="#888888"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/articleTimeAgo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18min"
                android:textColor="#888888"
                android:textSize="11sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👁 1000"
                    android:textColor="#aaaaaa"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👍 50"
                    android:textColor="#aaaaaa"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💬 3"
                    android:textColor="#aaaaaa" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
