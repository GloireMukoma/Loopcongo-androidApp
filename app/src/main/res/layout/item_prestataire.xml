<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/BleuClairPrimaryColor"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Avatar profil rond -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/photoProfilPrestataire"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </androidx.cardview.widget.CardView>

        <!-- Contenu textuel -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nom + Heure alignée à droite -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Nom du prestataire (à gauche) -->
                <TextView
                    android:id="@+id/usernamePrestataire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom prestataitre"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <!-- Localisation (à droite) -->
                <LinearLayout
                    android:id="@+id/locationContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:tint="@color/gray"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/localisationPrestataire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="city"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />
                </LinearLayout>

            </RelativeLayout>


            <!-- profession comme "Work Inquiry" -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/gray"
                    android:src="@drawable/ic_citizen" />

                <TextView
                    android:id="@+id/professionPrestataire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Inquiry"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />
            </LinearLayout>



            <!-- Description courte -->
            <TextView
                android:id="@+id/aboutPrestataire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I really like what you do on dribbble ..."
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <!-- Localisation (optionnelle, visible en dessous si nécessaire) -->
            <!-- <TextView
                 android:id="@+id/localisationPrestataire"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="ville"
                 android:textColor="#aaaaaa"
                 android:textSize="12sp"
                 android:layout_marginTop="2dp"
                 android:visibility="gone" /> -->
         </LinearLayout>
     </LinearLayout>
 </androidx.cardview.widget.CardView>
