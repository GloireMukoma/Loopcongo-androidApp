<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="143dp"
    android:layout_marginRight="8dp"
    android:clipChildren="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/low_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image de fond -->
        <ImageView
            android:id="@+id/topVendeursImageArticle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.95"
            android:src="@drawable/images" />

        <!-- Avatar rond -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/topVendeurAvatarImage"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="6dp"
            android:scaleType="centerCrop"
            android:padding="2dp"
            app:shapeAppearanceOverlay="@style/CircularImageStyle"
            app:strokeColor="@android:color/holo_orange_light"
            app:strokeWidth="2dp"
            android:src="@drawable/images" />

        <!-- Infos en bas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/degrade_background_color"
            android:padding="6dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/topVendeurUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:shadowColor="#88000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/topVendeurNbArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il y a 2h"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />
        </LinearLayout>

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
