<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="8dp">

    <!-- Bandeau jaune avec titre et icône X -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD600"
        android:padding="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicité"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#000000"/>
    </RelativeLayout>

    <!-- Section profil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/popupPremiumUserAvatarImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_user"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:background="@android:color/darker_gray"
            android:clipToOutline="true"
            android:contentDescription="Profile Picture"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popupPremiumUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/popupPremiumUserNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0971737160"
                android:textSize="14sp"
                android:textColor="#555555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Titre de la section articles -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Articles déjà publiés :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="8dp"
        android:textColor="#000000"/>

    <!-- Grille de produits -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popupPremiumUserRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"/>

    <!-- Bouton voir profil -->
    <Button
        android:id="@+id/popupPremiumUserViewProfilBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voir profil"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>
</LinearLayout>
