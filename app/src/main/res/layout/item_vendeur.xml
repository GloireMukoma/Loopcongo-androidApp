<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#282828"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageVendeur"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/RoundedImageShape" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomVendeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du vendeur"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/descriptionVendeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/nbArticles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 articles"
                android:textSize="13sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/typeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="#2196F3" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
