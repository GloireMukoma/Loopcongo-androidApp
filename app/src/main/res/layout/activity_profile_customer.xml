<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProfileCustomerActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/BleuFoncePrimaryColor"
        android:padding="10dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"/>

        <TextView
            android:id="@+id/statsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil de l'utilisateur"
            android:textColor="#D0D0D0"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Avatar et Nom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgCustomerAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            android:background="@drawable/circle_background"
            android:padding="2dp"
            android:contentDescription="Avatar utilisateur"/>

        <TextView
            android:id="@+id/txtCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom d'utilisateur"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Ville -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            app:tint="@color/gray"/>

        <TextView
            android:id="@+id/txtCustomerCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lubumbashi"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <!-- Contact -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_phone"
            app:tint="@color/gray"/>

        <TextView
            android:id="@+id/txtCustomerContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+243 900 000 000"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <!-- About -->
    <TextView
        android:id="@+id/txtCustomerAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ã€ propos de l'utilisateur..."
        android:textSize="16sp"
        android:layout_margin="12dp"
        android:textColor="@color/black"/>

    <!-- Boutons d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Message"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:drawableStart="@drawable/ic_message"
            android:padding="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnFollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Suivre"
            android:textColor="@color/white"
            android:backgroundTint="@color/BleuFoncePrimaryColor"
            android:drawableStart="@drawable/ic_stars"
            android:padding="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
