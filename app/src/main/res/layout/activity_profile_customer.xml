<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BleuClairPrimaryColor"
    tools:context=".ProfileCustomerActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/BleuFoncePrimaryColor"
        android:padding="12dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"/>

        <TextView
            android:id="@+id/statsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil de l'utilisateur"
            android:textColor="#D0D0D0"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/BleuFonce2PrimaryColor"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Avatar et Nom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp">

                <!-- Avatar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgCustomerAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/user_profile"
                    android:scaleType="centerCrop"
                    app:strokeColor="@android:color/holo_orange_light"
                    app:strokeWidth="1dp"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <!-- Infos utilisateur -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Nom -->
                    <TextView
                        android:id="@+id/txtCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chargement..."
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <!-- Téléphone + icône appel -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/gray"/>

                        <TextView
                            android:id="@+id/txtCustomerContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textSize="13sp"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/low_white"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <!-- Ville -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/gray"/>

                <TextView
                    android:id="@+id/txtCustomerCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Contact -->
            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/gray"/>

                <TextView
                    android:id="@+id/txtCustomerContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>-->

            <!-- About -->
            <TextView
                android:id="@+id/txtCustomerAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/low_white"/>

            <!-- Boutons d'action -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:drawableStart="@drawable/ic_message"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"/>

                <!--<Button
                    android:id="@+id/btnFollow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Suivre"
                    android:textColor="@color/white"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:drawableStart="@drawable/ic_stars"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"/>-->
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
