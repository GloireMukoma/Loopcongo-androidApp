<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:clipToPadding="false">

    <!-- Photo Profile -->
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        card_view:cardCornerRadius="30dp"
        android:layout_marginEnd="10dp"
        card_view:cardElevation="3dp">

        <ImageView
            android:id="@+id/imgUserPending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"/>
    </androidx.cardview.widget.CardView>


    <!-- Infos utilisateur -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNamePending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom utilisateur"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPhonePending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+243 000 000 000"
            android:textSize="13sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txtTypeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="Abonnement: Premium"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- Icon menu -->
    <ImageView
        android:id="@+id/btnMenuPending"
        android:layout_width="18dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_more"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:tint="@color/gray"/>
</LinearLayout>
