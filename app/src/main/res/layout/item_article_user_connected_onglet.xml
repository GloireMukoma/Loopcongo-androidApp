<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- IMAGE DE L'ARTICLE -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/articleImageUserConnectedOnglet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/RoundedImageShape" />

        <!-- INFOS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Titre -->
            <TextView
                android:id="@+id/articleNomUserConnectedOnglet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre de l'article"
                android:textSize="14sp"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Prix -->
            <TextView
                android:id="@+id/articlePrixUserConnectedOnglet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="18 $"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Auteur -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_person"
                    app:tint="#888888"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/articleDescUserConnectedOnglet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom user"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <!-- Temps -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_time"
                    app:tint="#888888"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/articleTimeAgoUserConnectedOnglet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18min"
                    android:textSize="11sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Icône corbeille en haut à droite de l'item -->
    <ImageView
        android:id="@+id/deleteArticleIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:src="@drawable/ic_delete_"
        app:tint="@color/gray"
        android:background="?attr/selectableItemBackgroundBorderless" />
</FrameLayout>
