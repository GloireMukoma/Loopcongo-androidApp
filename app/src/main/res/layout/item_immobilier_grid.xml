<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardUseCompatPadding="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image -->
        <ImageView
            android:id="@+id/imgImmobilierItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Image de l’article"
            android:src="@drawable/shoes_men" />

        <!-- ⭐ Badge status/prix en haut à droite -->
        <TextView
            android:id="@+id/statusPrixImmobilierItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status • prix $"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_status_prix"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"/>

        <!-- Fond dégradé + texte en bas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@drawable/degrade_background_color"
            android:padding="6dp">

            <!-- Titre -->
            <TextView
                android:id="@+id/titreImmobilierItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom de l'immobilier"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/statusImmobilierItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="statut"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Auteur + localisation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="3dp"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/auteurImmobilierItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auteur"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>
