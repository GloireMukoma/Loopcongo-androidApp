<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Onglets -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/prestataireTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="-10dp"
        android:background="#212529"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#FFD700"
        app:tabSelectedTextColor="#FFD700"
        app:tabIconTint="@color/my_tab_icon_color"
        app:tabTextColor="#CCCCCC"
        app:tabTextAppearance="@style/TabTextSmallOngletsPrestataire"
        app:tabGravity="fill" />

    <!-- Contenu des onglets -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/prestataireViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white" />

</LinearLayout>
