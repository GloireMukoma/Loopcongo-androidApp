<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- enabled state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/BleuClairPrimaryColor"/> <!-- couleur verte / teal -->
            <corners android:radius="28dp"/>
            <size android:height="56dp"/>
        </shape>
    </item>

    <!-- disabled state (looks like the screenshot: muted green) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/BleuClairPrimaryColor"/> <!-- un vert plus sombre/atténué -->
            <corners android:radius="28dp"/>
            <size android:height="56dp"/>
        </shape>
    </item>
</selector>
